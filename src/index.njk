---
layout: base.njk
title: ""
---
<section class="hero">
  <h2 class="hero__title">Welcome to the Den</h2>
  <p class="hero__subtitle">Metal shows, reviews, and the underground scene.</p>
  <div class="hero__ornament">since {{ site.startYear }}</div>
</section>

<section class="posts-section">
  <h2 class="section-title">Latest Posts</h2>
  <div class="post-list">
    {% set postList = collections.posts %}
    {% for post in postList | limit(10) %}
    <article class="post-card">
      {% if post.data.image %}
      <div class="post-card__image">
        <a href="{{ post.url }}">
          <img src="{{ post.data.image }}" alt="{{ post.data.title }}" loading="lazy">
        </a>
      </div>
      {% endif %}
      <div class="post-card__body">
        <h3 class="post-card__title">
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h3>
        <time class="post-card__date" datetime="{{ post.date | dateISO }}">
          {{ post.date | dateDisplay }}
        </time>
        {% if post.data.tags %}
        <div class="post-card__tags">
          {% for tag in post.data.tags %}
            {% if tag != "post" %}
            <span class="tag">{{ tag }}</span>
            {% endif %}
          {% endfor %}
        </div>
        {% endif %}
        {% if post.data.excerpt %}
        <p class="post-card__excerpt">{{ post.data.excerpt }}</p>
        {% endif %}
      </div>
    </article>
    {% endfor %}
  </div>

  {% if collections.posts.length > 10 %}
  <div class="posts-section__more">
    <a href="/archive/" class="btn">View All Posts</a>
  </div>
  {% endif %}
</section>
