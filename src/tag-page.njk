---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - posts
    - tagList
permalink: /tags/{{ tag | slugify }}/index.html
layout: base.njk
---
<section class="archive">
  <h2 class="section-title">Tagged: {{ tag }}</h2>
  <p class="archive__intro">
    <a href="/tags/">&larr; All tags</a>
  </p>

  <ul class="archive__list">
    {% set taggedPosts = collections[tag] | reverse %}
    {% for post in taggedPosts %}
    <li class="archive__item">
      <time datetime="{{ post.date | dateISO }}">{{ post.date | dateDisplay }}</time>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </li>
    {% endfor %}
  </ul>
</section>
